<%= form_with(model: interview, url: path, local: true) do |form| %>
  <% if interview.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(interview.errors.count, "error") %> prohibited this interview from being saved:</h2>

      <ul>
      <% interview.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="panel panel-default">
    <div class="panel-heading">
      <h4><%= title %> Interview</h4>
    </div>
    <div class="panel-body">
      <div class="form-group">
        <%= form.label "Datetime" %><br />
        <%= form.datetime_select :scheduled_datetime, { id: :interview_scheduled_datetime,
        start_year: Time.now.year, end_year: Time.now.next_year.year },
        { class: "form-control auto-width inline-block" } %>
      </div>
    </div>
  </div>
  <%= form.submit btn_title, class: "btn btn-primary" %>
  <%= link_to 'Back', user_interviews_path(current_user.id), class: "btn btn-default" %>
<% end %>
